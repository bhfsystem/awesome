#!/usr/bin/env bash

function main {
  local shome="${_awesome_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"
  source "$shome/script/profile"

  local nm_region="${0##*/}"
  nm_region="${nm_region#aws-}"

  export AWS_PROFILE="${CONTEXT_ORG:+$CONTEXT_ORG-}${CONTEXT_ENV:+$CONTEXT_ENV-}${nm_region}"
  
  if [[ -n "${DEBUG:-}" ]]; then
    set -x
  fi
  exec "$@"
}

source sub "$BASH_SOURCE" "$@"
